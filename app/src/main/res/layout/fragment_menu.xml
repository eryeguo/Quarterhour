<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/beijin"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/ivMenuUserProfilePhoto"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="12dp"
            fresco:roundAsCircle="true"

            />

        <TextView
            android:textSize="23dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="迷人的脚毛"
            android:id="@+id/c_name"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_marginTop="35dp"
            android:layout_width="23dp"
            android:layout_height="23dp"
             android:background="@drawable/gil"
            android:id="@+id/c_sex"

            />
       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <com.leon.lib.settingview.LSettingItem

            android:id="@+id/item_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@drawable/xin"
            leon:leftText="我的关注" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_tow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@drawable/baiwujiao"
            leon:leftText="我的收藏" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@drawable/seach"
            leon:leftText="搜索好友" />

        <com.leon.lib.settingview.LSettingItem
            android:id="@+id/item_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            leon:leftIcon="@drawable/message"
            leon:leftText="消息通知" />
    </LinearLayout>
    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/item_moshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:leftIcon="@drawable/moon_yellow"
        leon:leftText="夜间模式"
        leon:rightStyle="iconSwitch"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />



</RelativeLayout>