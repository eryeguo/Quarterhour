<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/link1"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="pingan.com.quarter_hour.acyivity.login.RegisteredActivity">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/back"

        android:id="@+id/imageView"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号？"
        android:textColor="#d9d9d9"
        android:textSize="15dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:id="@+id/zhcue" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="120dp"
        android:layout_height="120dp"
        fresco:placeholderImage="@drawable/home_img"
        fresco:roundedCornerRadius="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/touxiang"/>


    <LinearLayout
        android:id="@+id/dlshurukuang"
        android:layout_below="@+id/touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/dlzcbg"
        >

        <EditText
            android:id="@+id/myname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/shurubg"
            android:hint="请输入手机号"
            android:inputType="number"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#bfbbbb"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"></View>
        <EditText
            android:id="@+id/mypassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/myname"
            android:background="@drawable/shurubg"
            android:hint="输入大小写和数字"/>
    </LinearLayout>



    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/dlbg"
        android:text="注册"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/dlshurukuang"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
